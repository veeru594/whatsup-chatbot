# .env.example - Copy this to .env and fill in your values

# Groq API Key (get from https://console.groq.com)

LLM_MODEL=llama-3.1-8b-instant


# WhatsApp Cloud API credentials (get from Meta for Developers)
WHATSAPP_TOKEN=your-whatsapp-token-here
WHATSAPP_PHONE_ID=your-phone-id-here
WHATSAPP_VERIFY_TOKEN=mytoken123
WHATSAPP_API_URL=https://graph.facebook.com/v16.0

# Vector Database Settings
CHROMA_DIR=./chroma_db
EMBED_MODEL=all-MiniLM-L6-v2

# Website to scrape
SITEMAP_URL=https://example.com/sitemap.xml
SCRAPE_USER_AGENT=MyBot/1.0

# Server Settings
HOST_URL=http://localhost:8000
PORT=8000

# Chunking Settings
MAX_CHUNK_TOKENS=450
